            <div class='row' id='event-screen'>
                <div class='col-md-4 cols'>
                    <div class='inner-event'>
                        <h3 class='underline-title'>Announcements<span class="glyphicon glyphicon-plus pull-right open-modal" data-type=0 data-toggle="modal" data-target="#add-announcement" aria-hidden="true"></span>
                        </h3>
                        <div class='row innerrow'>
                            <div class='col-md-12 announce panel panel-default'>
                                <h4 class='panel-heading'>
                                    <%= announcements[announcements.length - 1].title %>!<span class="label label-primary pull-right">New</span></h4>
                                <div class='panel-body'>
                                    <p class='lead'>
                                        <%= announcements[announcements.length - 1].description %>
                                    </p>
                                    <small class='read-more'><a data-toggle="modal" data-target="#add-info">Read more...</a></small>
                                </div>
                            </div>
                            <div class='col-md-12 announce panel panel-default'>
                                <h4 class='panel-heading'>
                                    <%= announcements[announcements.length - 2].title%>!<span class="label label-primary pull-right">New</span></h4>
                                <div class='panel-body'>
                                    <p class='lead'>
                                        <%= announcements[announcements.length - 2].description %>
                                    </p>
                                    <small class='read-more'><a data-toggle="modal" data-target="#myModal">Read more...</a></small>
                                </div>
                            </div>
                            <div class='col-md-12 announce panel panel-default'>
                                <h4 class='panel-heading'>
                                    <%= announcements[announcements.length - 3].title%>!<span class="label label-primary pull-right">New</span></h4>
                                <div class='panel-body'>
                                    <p class='lead'>
                                        <%= announcements[announcements.length - 3].description %>
                                    </p>
                                    <small class='read-more'><a data-toggle="modal" data-target="#myModal">Read more...</a></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='col-md-4 cols'>
                    <div class='inner-event'>
                        <h3 class='underline-title'>General Information<span class="glyphicon glyphicon-plus pull-right open-modal" data-toggle="modal" data-type=1 data-target="#add-announcement" aria-hidden="true"></span></h3>
                        <div class='row innerrow'>
                            <div class='col-md-12 announce panel panel-default'>
                                <h4 class='panel-heading'>
                                    <%= generalinfo[generalinfo.length - 1].title %>!<span class="label label-primary pull-right">New</span></h4>
                                <div class='panel-body'>
                                    <p class='lead'>
                                        <%= generalinfo[generalinfo.length - 1].description %>
                                    </p>
                                    <small class='read-more'><a data-toggle="modal" data-target="#add-info">Read more...</a></small>
                                </div>
                            </div>
                            <div class='col-md-12 announce panel panel-default'>
                                <h4 class='panel-heading'>
                                    <%= generalinfo[generalinfo.length - 2].title %>!<span class="label label-primary pull-right">New</span></h4>
                                <div class='panel-body'>
                                    <p class='lead'>
                                        <%= generalinfo[generalinfo.length - 2].description %>
                                    </p>
                                    <small class='read-more'><a data-toggle="modal" data-target="#add-info">Read more...</a></small>
                                </div>
                            </div>
                            <div class='col-md-12 announce panel panel-default'>
                                <h4 class='panel-heading'>
                                    <%= generalinfo[generalinfo.length - 3].title %>!<span class="label label-primary pull-right">New</span></h4>
                                <div class='panel-body'>
                                    <p class='lead'>
                                        <%= generalinfo[generalinfo.length - 3].description %>
                                    </p>
                                    <small class='read-more'><a data-toggle="modal" data-target="#add-info">Read more...</a></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='col-md-4 cols'>
                    <div class='inner-event'>
                        <h3 class='underline-title'>Schedule<span class="glyphicon glyphicon-plus pull-right" data-toggle="modal" data-target="#myModal" aria-hidden="true"></span></h3>
                        <div class='row innerrow'>
                            <div class='col-md-12 announce'>
                                <h4>Hello there!</h4>
                                <p class='lead'>December 13th</p>
                            </div>
                            <div class='col-md-12 announce'>
                                <h4>Bye there!</h4>
                            </div>
                            <div class='col-md-12 announce'>
                                <h4>Goodbye there!</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <div class='row'>
            <iframe src="https://calendar.google.com/calendar/embed?src=1ue00hf59k7ms345mtab6dnfqc%40group.calendar.google.com&ctz=Europe/Amsterdam" style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>-->

            <div class="modal fade" id="add-announcement" tabindex="-1" role="dialog" aria-labelledby="addAnnouncement">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel"></h4>
                        </div>
                        <form method="post" action="/announcement/add">

                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="announcementTitle" id='section-header'></label>
                                    <input type="text" class="form-control" id="announcementTitle" name="title" placeholder="Title">
                                </div>
                                <div class="form-group">
                                    <label for="announcementDescription">Content</label>
                                    <textarea type="text" class="form-control" id="announcementDescription" name="description" placeholder="Text" rows="4"></textarea>
                                </div>

                                <div class="form-group target">
                                    <label for="announcementDescription">Target</label>
	                                <select class="form-control">
							  	  	  <option>All students</option>
							  		  <option>Spatial Sciences</option>
							  		  <option>Gender and Biversity</option>
							  		  <option>Economics and Business</option>
							  		  <option>Human Resource Management</option>
							  		  <option>Artificial Intelligence</option>
							  		</select>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-info">Preview</button>
                                <button type="submit" class="btn btn-primary finish">Post announcement</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </body>

</html>