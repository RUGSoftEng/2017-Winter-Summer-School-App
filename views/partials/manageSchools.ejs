<div id='fix'>
    <div id='innerContent'>

        <ul class='nav nav-tabs' role='tablist'>
            <li role='presentation' class='active'><a href='#home' aria-controls='home' role='tab'
                                                      data-toggle='tab'>Add</a></li>
            <li role='presentation'><a href='#view' aria-controls='view' role='tab' data-toggle='tab'>View</a></li>
        </ul>

        <div class='tab-content'>
            <div role='tabpanel' class='tab-pane fade in active' id='home'>
                <h3>Add a summer/winter school</h3>
                <form method='post' enctype='application/json' action='school'>
                    <div class='modal-body modal-add-body'>

                        <div class='form-group'>
                            <label class='control-label' for='schoolName'>Name of the school</label>
                            <input type='name' class='form-control' id='schoolName' placeholder='Name'
                                   name='schoolName'>
                            <span class='help-block'>
                                <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                                <span></span>
                            </span>
                        </div>

                        <div class='form-group'>
                            <label class='control-label' for='startDate'>Start date</label>
                            <input type='date' class='form-control' id='startDate' placeholder='31/01/2000'
                                   name='startDate'>
                            <span class='help-block'>
                                <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                                <span></span>
                            </span>
                        </div>

                        <div class='form-group'>
                            <label class='control-label' for='endDate'>End date</label>
                            <input type='date' class='form-control' id='endDate' placeholder='28/02/2000'
                                   name='endDate'>
                            <span class='help-block'>
                                <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                                <span></span>
                            </span>
                        </div>

                        <div class='modal-footer'>
                            <button type='submit' class='btn btn-primary finish'>Add</button>
                        </div>

                    </div>
                </form>
            </div>
            <div role='tabpanel' class='tab-pane fade' id='view'>

                <table class='table table-striped table-hover'>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Starting date</th>
                        <th>Ending date</th>
                        <!--<th>Delete</th>-->
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < schools.length; i++) {
                        if (!Number.isInteger(schools[i]._id))
                            continue;
                    %>
                    <tr>
                        <td>
                            <%= schools[i]._id %>
                        </td>
                        <td>
                            <%= schools[i].name %>
                        </td>
                        <td>
                            <%= new Date(schools[i].startDate).toDateString() %>
                        </td>
                        <td>
                            <%= new Date(schools[i].endDate).toDateString() %>
                        </td>
                        <td>
                            <button type='button' class='btn btn-default delete-school' aria-label='Delete'
                                    data-toggle='tooltip' data-placement='bottom' data-id='<%= schools[i]._id %>'
                                    title='Delete'><span
                                        class='glyphicon glyphicon-remove' aria-hidden='true'></span></button>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    <% include js/manageSchools.js %>
</script>