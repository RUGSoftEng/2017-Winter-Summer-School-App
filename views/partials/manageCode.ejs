<div id='fix'>
    <div id='innerContent'>

        <ul class='nav nav-tabs' role='tablist'>
            <li role='presentation' class='active'><a href='#home' aria-controls='home' role='tab'
                                                      data-toggle='tab'>Add</a></li>
            <li role='presentation'><a href='#view' aria-controls='view' role='tab' data-toggle='tab'>View</a></li>
        </ul>

        <div class='tab-content'>
            <div role='tabpanel' class='tab-pane fade in active' id='home'>
                <h3>Add a code</h3>
                <form method='post' enctype='application/json' action='loginCode'>
                    <div class='modal-body modal-add-body'>

                        <div class='form-group'>
                            <label class='control-label' for='username'>Code</label>
                            <input type='name' class='form-control' id='code' placeholder='1234abcd'
                                   name='code'>
                            <span class='help-block'>
                                <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span>
                                <span></span>
                            </span>
                        </div>
                        <div class='form-group'>
                            <label class='control-label' for='school'>School</label>
                            <select class='form-control' id='school' name='school'>
                                <% for(var i = 0; i < schools.length; i++) { %>
                                <% if(schools[i]._id !== "schoolid") { %>
                                <option value='<%= schools[i]._id %>'><%= schools[i].name %></option>
                                <% }} %>
                            </select>
                        </div>

                        <div class='modal-footer'>
                            <button type='button' class='btn btn-default' data-dismiss='modal'>Cancel</button>
                            <button type='submit' class='btn btn-primary finish'>Add</button>
                        </div>

                    </div>
                </form>
            </div>
            <div role='tabpanel' class='tab-pane fade' id='view'>

                <table class='table table-striped table-hover'>
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>School</th>
                        <th>Date</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < loginCodes.length; i++) { %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= loginCodes[i].code %>
                        </td>
                        <td>
                            <%= loginCodes[i].school %>
                        </td>
                        <td>
                            <%= new Date(loginCodes[i].date).toDateString() %>
                        </td>
                        <td>
                            <button type='button' class='btn btn-default delete-code' aria-label='Delete'
                                    data-toggle='tooltip' data-placement='bottom' data-id='<%= loginCodes[i]._id %>'
                                    title='Delete'><span
                                        class='glyphicon glyphicon-remove' aria-hidden='true'></span></button>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script>
    <% include js/manageCodes.js %>
</script>