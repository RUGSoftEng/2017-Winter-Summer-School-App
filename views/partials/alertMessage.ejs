	<% if(typeof alert !== 'undefined') { %>
	    <% if(alert.success) { %>
	        <script>
	            $(function() {
	                $('#successMessage').show();
	                <% if (alert.message) {%>
	                	$('#successMessage').text(`<%- alert.message %>`); /* Note: ` ` template literal string is needed! */
	                <% } %>
	            })
	        </script>

	        <% } if(alert.success === false) { %>
	            <script>
	                $(function() {
	                    $('#errorMessage').show();
	                    <% if (alert.message) {%>
	                		$('#errorMessage').text(`<%- alert.message %>`);
						<% } %>
	                })
	            </script>

	         <% } %>
	    <% } %>
                <div id='errorMessage' class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Error!</strong><span class='textMsg'> Unknown error.</span>
                </div>
                <div id='successMessage' class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Success!</strong><span class='textMsg'> The action has been successfully performed.</span>
                </div>
</div>
