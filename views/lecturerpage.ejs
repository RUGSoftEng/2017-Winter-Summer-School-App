<!DOCTYPE html>
<html lang="en">
<% include partials/lecturerpage_header %>
<body class="full">
  <div id='wrap' class='full'>
    <% include partials/general_navigationbar.ejs %>
    <div class="inner-event">
      <% include partials/modal.ejs %>
      <h3 class="underline-title">Lecturers
      <span class="glyphicon glyphicon-plus pull-right open-modal"aria-hidden="true" data-toggle="modal" data-target="#add-announcement"></span>
      </h3>
      <div class='row innerrow' id='event-screen'>
        <%lecturers.forEach(function(lecturer){%>
        <div class="col-md-3 col-sm-6 col-xs-6 panel open-modal" data-show="overview" data-toggle="modal" data-target="#add-announcement"data-id=<%- lecturer._id%> >
            <div class="thumbnail inner-event">
              <h4 class="title"><%=lecturer.name%></h4>
              <img class = "img-thumbnail" src=<%= lecturer.imagepath ? lecturer.imagepath : "/images/default/placeholder.jpeg"%> alt="Placeholder">
              <div class="caption">
                <p class="lead data-text"><%=lecturer.description%></p>
              </div>
            </div>
        </div>
        <%});%>
      </div>
    </div>
</div>
</body>
</html>
